  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body text-center">
        <h1 class="mb-3">
          <img src="/assets/secure-icon.png" alt="icon" width="20%" />
        </h1>
        <h2>
          Modifier un appareil
        </h2>
        <%- include ("./messages") %>
        <form  method="POST" id="update_device" >
          <div class="form-group">
            <label for="imei">Imei</label>
            <input type="hidden" name="id" value="<%= device._id %>">
            <input type="text"  name="imei" class="form-control" placeholder="Ilon Mask"
              value="<%= device.imei %>" />
          </div>
          <div class="form-group">
            <label for="device_nom">Nom de l'appareil</label>
            <input type="text"  name="device_nom" class="form-control" placeholder="Enter le nom"
              value="<%= device.device_nom %>" />
          </div>
          <div class="form-group">
            <label for="group">groupe</label>
            <select class="form-control" id="group-dropdown" name="group_nom">
            <option value="">Select group</option>
            <% if(groups.length){
              for(var i = 0; i< groups.length; i++) {%> 
                  <option  value="<%= device.ident_canal_id%>">
                        <%= groups[i].group_nom %>
                  </option>
            <% } }%>
            </select>
            </div>
            <div class="form-group">
              <label for="canal">Canal</label>
              <select class="form-control" id="canal-dropdown" name="canal_nom">
              <option value="">Select canal</option>
              <% if(canals.length){
                for(var i = 0; i< canals.length; i++) {%> 
                    <option  value="<%= device.ident_group._id%>">
                          <%= canals[i].canal_nom %>
                    </option>
              <% } }%>
              </select>
              </div>
          <div>
            <button type="submit" class="btn btn-primary btn-block">
              Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
