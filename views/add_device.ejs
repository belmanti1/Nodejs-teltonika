  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body text-center">
        <h1 class="mb-3">
          <img src="/assets/secure-icon.png" alt="icon" width="20%" />
        </h1>
        <h2 >
          Ajouter un appareil
        </h2>
        <%- include ("./messages") %>
        <form action="/device/api/devices" method="POST" id="add_device">
          <div class="form-group">
            <label for="imei">Imei</label>
            <input type="imei" id="imei" name="imei" class="form-control" placeholder="Enter Imei"
              value="" />
          </div>
          <div class="form-group">
            <label for="device_nom">Nom de l'appareil</label>
            <input  type="device_nom" id="device_nom" name="device_nom" class="form-control" placeholder="Enter nom de l'appareil"
              value="" />
          </div>
          <div class="form-group">
            <label for="group">groupe</label>
            <select class="form-control" id="group-dropdown" name="group_nom">
            <option value="">Select group</option>
            <% if(groups.length){
              for(var i = 0; i< groups.length; i++) {%> 
                  <option  value="<%= groups[i]._id%>">
                        <%= groups[i].group_nom%>
                  </option>
            <% } }%>
            </select>
            </div>
            <div class="form-group">
              <label for="canal">Canal</label>
              <select class="form-control" id="canal-dropdown" name="canal_port">
              <option value="">Select canal</option>
              <% if(canals.length){
                for(var i = 0; i< canals.length; i++) {%> 
                    <option  value="<%= canals[i]._id%>">
                          <%= canals[i].canal_port %>
                    </option>
              <% } }%>
              </select>
              </div>
          <button type="submit" id="submitButton" class="btn btn-primary btn-block">
                Save
          </button>
        </form>
      </div>
    </div>
  </div>
 
